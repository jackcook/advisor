{
  "manifest_version": 2,
  "name": "Advisor",
  "description": "Converts websites' privacy policies to a human readable format, easily accessible from your browser.",
  "version": "0.1",

  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],

  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },

  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },

  "browser_action": {
    "default_popup": "popup.html"
  }
}
